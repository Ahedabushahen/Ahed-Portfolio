rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: check if requesting user is a registered admin
    function isAdmin() {
      return request.auth != null &&
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // site/content — public read, admin write
    match /site/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // projects — public read, admin write
    match /projects/{projectId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // certifications — public read, admin write
    match /certifications/{certId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // messages — public create only (contact form), admin full access
    match /messages/{messageId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // admins — admin read only (no public access)
    match /admins/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if false;
    }
  }
}
