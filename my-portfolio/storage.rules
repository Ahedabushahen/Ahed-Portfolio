rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Helper: check if requesting user is a registered admin
    function isAdmin() {
      return request.auth != null &&
        firestore.exists(/databases/(default)/documents/admins/$(request.auth.uid));
    }

    // Project images — public read, admin write/delete
    match /projects/{projectId}/{filename} {
      allow read: if true;
      allow write, delete: if isAdmin();
    }

    // CV / Resume — public read, admin write/delete
    match /cv/{filename} {
      allow read: if true;
      allow write, delete: if isAdmin();
    }

    // All other paths — public read, admin write/delete
    match /{allPaths=**} {
      allow read: if true;
      allow write, delete: if isAdmin();
    }
  }
}
